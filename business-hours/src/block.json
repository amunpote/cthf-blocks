{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "cthf-blocks/business-hours",
    "title": "Business Hours",
    "description": "Displays your business hours in a clear, concise format to show when you're available.",
    "category": "rootblox-footer",
    "supports": {
        "html": false,
        "color": {
            "background": true,
            "gradients": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": [
                "top", "bottom"
            ],
            "__experimentalDefaultControls": {
                "padding": true
            }
        },
        "__experimentalBorder": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true,
            "__experimentalDefaultControls": {
                "color": true,
                "radius": true,
                "style": true,
                "width": true
            }
        }
    },
    "attributes": {
        "cover": {
            "type": "string",
            "default": ""
        },
        "clientId": {
            "type": "string",
            "default": ""
        },
        "startingDay": {
            "type": "string",
            "default": "mon"
        },
        "timeFormat": {
            "type": "boolean",
            "default": true
        },
        "weekdays": {
            "type": "array",
            "default": [
                {
                    "key": "monday",
                    "opened": true,
                    "openTime": "",
                    "closeTime": ""
                },
                {
                    "key": "tuesday",
                    "opened": true,
                    "openTime": "",
                    "closeTime": ""
                },
                {
                    "key": "wednesday",
                    "opened": true,
                    "openTime": "",
                    "closeTime": ""
                },
                {
                    "key": "thursday",
                    "opened": true,
                    "openTime": "",
                    "closeTime": ""
                }, {
                    "key": "friday",
                    "opened": true,
                    "openTime": "",
                    "closeTime": ""
                }, {
                    "key": "saturday",
                    "opened": false,
                    "openTime": "",
                    "closeTime": ""
                }, {
                    "key": "sunday",
                    "opened": false,
                    "openTime": "",
                    "closeTime": ""
                }
            ]
        },
        "timeStyles": {
            "type": "object", 
            "default": {
                "separator": " — "      
            }
        },
        "notification": {
            "type": "object",
            "default": {
                "content": "— Closed",
                "addTimer": false
            }
        },
        "itemStyles": {
            "type": "object",
            "default": {
                "gap": "6px"
            }
        }

    },
    "editorScript": ["cthf-blocks--business-hours"],
    "editorStyle": ["cthf-blocks--business-hours--editor-style"],
    "style": ["cthf-blocks--business-hours--style"],
    "viewScript": ["cthf-blocks--business-hours--frontend-script"],
    "render": "file:./render.php"
}

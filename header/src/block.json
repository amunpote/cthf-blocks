{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "cthf-blocks/header",
    "title": "Header Builder",
    "description": "The Header Block lets you create a fully customizable, responsive site header with options for sticky behavior, transparent backgrounds, and flexible layouts.",
    "category": "rootblox",
    "attributes": {
        "cover": {
            "type": "string",
            "default": ""
        },
        "clientId": {
            "type": "string",
            "default": ""
        },
        "enableOptions": {
            "type": "object",
            "default": {
                "topBar": true,
                "bottomBar": true
            }
        },
        "stickyHeader": {
            "type": "object",
            "default": {
                "enabled": false,
                "topBar": true,
                "bottomScrollHide": false,
                "bottomScrollOffset": 500,
                "backdropBlur": "5px"
            }
        },
        "mobileMenu": {
            "type": "object",
            "default": {
                "status": "mobile",
                "layout": [
                    ["Site Logo"], ["Navigation"]
                ],
                "breakpoint": 1280,
                "wrapperPadding": {
                    "top": "26px",
                    "right": "26px",
                    "bottom": "26px",
                    "left": "26px"
                },
                "menuID": ""
            }
        },
        "sidebar": {
            "type": "object",
            "default": {
                "siteLogo": true,
                "navigation": true,
                "button": false,
                "btnGroup": [
                    {
                        "label": "Subscribe",
                        "link": "#",
                        "openNewTab": false,
                        "noFollow": false
                    }
                ],
                "social": false,
                "width": "450px",
                "position": "left",
                "padding": {
                    "top": "40px",
                    "right": "26px",
                    "bottom": "40px",
                    "left": "26px"
                }
            }
        },
        "siteLogo": {
            "type": "object",
            "default": {
                "width": "200px"
            }
        },
        "search": {
            "type": "object",
            "default": {
                "variation": "post"
            }
        },
        "ctaButton": {
            "type": "object",
            "default": {
                "label": "Subscribe",
                "link": "#",
                "openNewTab": false,
                "noFollow": false,
                "padding": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "border": {
                    "style": "",
                    "width": "",
                    "color": ""
                },
                "radius": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "font": {
                    "size": "",
                    "weight": "",
                    "family": ""
                },
                "letterCase": "none",
                "decoration": "none",
                "lineHeight": "",
                "letterSpacing": "",
                "color": {
                    "text": "",
                    "textHover": "",
                    "bg": "",
                    "bgHover": "",
                    "borderHover": ""
                }
            }
        },
        "color": {
            "type": "object",
            "default": {
                "mobileBg": "#fff",
                "text": "#000",
                "sidebarBg": "#fff",
                "sidebarCloseIcon": "#9a9a9a"
            }
        }
    },
    "editorScript": ["cthf-blocks--header"],
    "editorStyle": ["cthf-blocks--header--editor-style"],
    "style": ["cthf-blocks--header--style"],
    "script": ["cthf-blocks--header--frontend-script"],
    "render": "file:./render.php"
}

    "enableOptions": {
      "type": "object",
      "default": {
        "topBar": true,
        "bottomBar": true
      }
    },
    "stickyHeader": {
      "type": "object",
      "default": {
        "enabled": false,
        "topBar": true,
        "bottomScrollHide": false,

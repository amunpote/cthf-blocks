        "backdropBlur": "5px"
      }
    },
    "mobileMenu": {
      "type": "object",
      "default": {
        "status": "mobile",
        "layout": [
          [
            "Site Logo"
          ],
          [
            "Navigation"
          ]
        ],
        "breakpoint": 1280,
        "wrapperPadding": {
          "top": "26px",
          "right": "26px",
          "bottom": "26px",
          "left": "26px"
        },
        "menuID": ""
      }
    },
    "sidebar": {
      "type": "object",

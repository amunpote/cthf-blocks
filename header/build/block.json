    },
    "siteLogo": {
      "type": "object",
      "default": {
        "useDefaultLogo": true,
        "custom": {
          "id": "",
          "url": ""
        },
        "width": "200px"
      }
    },
    "navigation": {
      "type": "object",
      "default": {
        "menuGap": "",
        "submenuGap": "",
